syntax "toka" "\.toka$"
color brightyellow  "[0-9]"
color brightred     "\[|\]"
color brightgreen   "\{|\}"
color green         "invoke|iterate|\+iterate|recurse|whileTrue|whileFalse"
color brightblue    "\#\!.*"
color cyan          start=" is "        end="$"
color cyan          start=" is-data "   end="$"
color cyan          start=" is-macro "  end="$"
color magenta       start=" \\ "        end="$"

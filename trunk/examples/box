#! /usr/bin/toka
value rows
value cols

value row$

" $$" keep to row$

[ ( rows cols -- )
  to cols  to rows
  cols [ row$ type ] iterate cr
  rows 2 - [ row$ type cols 2 - [ row$ count 1 - [ space ] iterate drop ] iterate row$ type cr ] iterate
  cols [ row$ type ] iterate cr
] is draw-box

10 20 draw-box

" *" keep to row$
10 20 draw-box
bye
